.warning{
  width:96%;
  margin:2%;
  border-bottom: solid 1px #efefefef;
}
.warning .item{
  color: red;
  font-style:"黑体";
  display: block;
  font-size:19px;
  text-align: center;
}
.news{
  width:96%;
  margin: 2%;
  border-bottom: solid 1px #efefefef;
}
.news .item{
  font-size:19px;
  text-align:left;
  display: block;
}
.news .item-time{
  color: #30303030;
  text-align:left;
  display:block;
}
.news_left{
    width:65%;
    float: left;
}
.news_left .news_item{
    padding: 10px;
    font-size:19px;
    line-height: 22px;
    color:#010101;
}
.news_left .news_but{
  font-size:5px;
}
.news_content_right{
  width:35%;
  float: right;
}

.contentRightTopButtom{  
  display:flex;
  margin-top:10px;
  height:18%;
  border-bottom: 1px solid #efefefef;
}
 .contentRightTopButtom>.itemSize{
  color:white;
  text-align:center;
  line-height:100px;
  font-size:20px;
 
  width: 100px;
  height:100px;
} 
.contentTopButtom{
  flex: 1; 
  display: flex;  
  justify-content: space-around;
  align-items: stretch;
  flex-direction: column;
}
.contentTopButtom >.itemSize{
  flex: 1.8; 
  align-self: stretch;
  color: black;
  font-size:10px;
  line-height: 23px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.itemSizes{
  color: #C0C0C0;
  flex: 1; 
  align-self: stretch;
  text-align: right;
  
}
.red{
  background-color: red;
}
.picture{
  width: 80%;
  height: 80%;

}
.tips{
  text-align: center;
  padding-bottom: 5px;
}