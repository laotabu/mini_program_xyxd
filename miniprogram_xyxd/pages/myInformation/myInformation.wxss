.top-mode{
  background: #6bbb37;
  height:400rpx;
  
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 120rpx;
}

.userinfo-nickname {
  color: #aaa;
}
.details {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;  
}
.details label {
  font-size:15px;
}

.card-info{
  width: 80%;
  box-shadow: 1px 1px 1px 1px #63B8FF;
  margin: auto;
  z-index: 1000;
  background: white;
  margin-top:-20px;

  
}
.console_button {
  display: flex;
  flex-direction: row;

}

.console_button{
  height: 60px;
  display:flex;
  background-color: #FFFFFF;
}

.console_button .console_button_item {
    width: 50%;
    height: 60px;
    color: #000;
    padding-top:8px;
    text-align: center;
    justify-content: center;
    align-items: center;
    margin-top: 5%;
}
.console_button .console_button_item image {
  width:23px;
  height:23px;
}
.console_button .console_button_item .menus_title {
  display: block;
}
.console_button .console_button_item .menus_title text {
  font-size:13px;
}

.ui-share-hover {
  /*
    点击后缩放
  */
  transform: scale(0.9,0.9);
}





