/**index.wxss**/
.userinfo {
  padding-top: 30%;
  margin-top:-100rpx;
  align-items: center;
}
.userinfo button {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: white;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}
.userinfo button image {
  width: 80rpx;
  height: 80rpx;
}

.userinfo button::after {
  border: 0;  
}
.ui-share-hover {
  /*
    点击后缩放
  */
  
  transform: scale(0.9,0.9);
}
